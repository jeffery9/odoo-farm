<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_task_form2_inherit_farm_safety" model="ir.ui.view">
        <field name="name">project.task.form.farm.safety</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_apply_prevention_template" string="Apply Prevention Plan" type="object" class="btn-secondary" invisible="not prevention_template_id or child_ids"/>
            </xpath>
            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="prevention_template_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
