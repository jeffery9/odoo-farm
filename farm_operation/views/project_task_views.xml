<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="project_task_view_form_inherit_farm_operation" model="ir.ui.view">
        <field name="name">project.task.form.inherit.farm.operation</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="campaign_id"/>
                <field name="land_parcel_id"/>
                <field name="required_skill_ids" widget="many2many_tags"/>
                <field name="required_certification_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>