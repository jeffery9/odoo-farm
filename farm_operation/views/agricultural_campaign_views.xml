<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="agricultural_campaign_view_tree" model="ir.ui.view">
        <field name="name">agricultural.campaign.list</field>
        <field name="model">agricultural.campaign</field>
        <field name="arch" type="xml">
            <list string="Production Seasons">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <record id="agricultural_campaign_view_form" model="ir.ui.view">
        <field name="name">agricultural.campaign.form</field>
        <field name="model">agricultural.campaign</field>
        <field name="arch" type="xml">
            <form string="Production Season">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="e.g. 2026 Spring"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="is_active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="description"/>
                        </page>
                        <page string="Associated Tasks">
                            <field name="project_task_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="project_id"/>
                                    <field name="land_parcel_id"/>
                                    <field name="date_deadline"/>
                                    <field name="stage_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_agricultural_campaign" model="ir.actions.act_window">
        <field name="name">Production Seasons</field>
        <field name="res_model">agricultural.campaign</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
