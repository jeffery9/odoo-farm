<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="mrp_production_form_view_inherit_farm_op" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.farm.op</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="agri_task_id" readonly="state != 'draft'"/>
                <field name="intervention_type"/>
            </xpath>
            <!-- 增加产成品分级 -->
            <xpath expr="//page[@name='finished_steps']//field[@name='move_finished_ids']//list//field[@name='product_uom_qty']" position="after">
                <field name="quality_grade" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
