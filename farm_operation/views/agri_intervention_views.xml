<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 重命名 MRP 菜单为 "Farm Interventions" -->
    <record id="mrp.menu_mrp_root" model="ir.ui.menu">
        <field name="name">Farm Interventions</field>
        <field name="active" eval="False"/> <!-- 隐藏原生 MRP 入口，使用自定义入口 -->
    </record>

    <!-- 自定义农业操作入口 -->
    <menuitem id="menu_farm_operation_intervention" name="Interventions" parent="menu_agri_campaign" action="mrp.mrp_production_action" sequence="20"/>

    <!-- 修改生产单列表视图的 Label -->
    <record id="view_mrp_production_filter_inherit_farm" model="ir.ui.view">
        <field name="name">mrp.production.search.inherit.farm</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='todo']" position="attributes">
                <attribute name="string">To Do</attribute>
            </xpath>
        </field>
    </record>

    <record id="mrp_production_tree_view_inherit_farm" model="ir.ui.view">
        <field name="name">mrp.production.list.inherit.farm</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Agri-Interventions</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="string">Intervention No.</attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="string">Output/Harvest</attribute>
            </xpath>
        </field>
    </record>

    <record id="mrp_production_form_view_inherit_farm_op" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.farm.op</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <!-- 顶部横幅：明确这是农业干预 -->
                <div class="alert alert-info text-center" role="alert" style="margin-bottom:0px;">
                    <strong>Agricultural Intervention Record</strong>
                </div>
            </xpath>
            <xpath expr="//field[@name='bom_id']" position="attributes">
                <attribute name="string">Recipe/Formula</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_submit_for_approval" string="Submit for Approval" type="object" class="btn-primary" invisible="approval_state != 'draft' or state != 'draft'"/>
                <button name="action_approve" string="Approve" type="object" class="btn-success" invisible="approval_state != 'to_approve'" groups="mrp.group_mrp_manager"/>
                <button name="action_reject" string="Reject" type="object" class="btn-danger" invisible="approval_state != 'to_approve'" groups="mrp.group_mrp_manager"/>
                
                <button name="action_start_work" string="Start Work" type="object" class="btn-success" invisible="is_working or state != 'confirmed'"/>
                <button name="action_stop_work" string="Stop Work" type="object" class="btn-warning" invisible="not is_working"/>
                <button name="action_export_drone_kml" string="Export Drone Route" type="object" class="btn-info" invisible="intervention_type != 'aerial_spraying'"/>
                <field name="is_working" invisible="1"/>
                <field name="approval_state" invisible="1"/>
                <field name="simplified_state" widget="statusbar" statusbar_visible="draft,approval,ready,progress,done"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="agri_task_id" readonly="state != 'draft'"/>
                <field name="intervention_type"/>
            </xpath>
            <!-- 增加产成品分级 -->
            <xpath expr="//page[@name='finished_steps']//field[@name='move_finished_ids']//list//field[@name='product_uom_qty']" position="after">
                <field name="quality_grade" optional="show"/>
            </xpath>
            <xpath expr="//page[@name='finished_products']" position="inside">
                <group string="Drone/Machinery Spatial Audit" invisible="intervention_type not in ['aerial_spraying', 'tillage', 'harvesting']">
                    <group>
                        <field name="drone_id" invisible="intervention_type != 'aerial_spraying'"/>
                        <field name="actual_flight_area" invisible="intervention_type != 'aerial_spraying'"/>
                    </group>
                    <group string="Boundary Compliance">
                        <widget name="agri_spatial_gauge"/>
                    </group>
                </group>
                <group string="Harvest Grading" invisible="intervention_type != 'harvesting'">
                    <field name="grade_a_qty"/>
                    <field name="grade_b_qty"/>
                    <field name="grade_c_qty"/>
                </group>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <widget name="agri_action_buttons"/>
                <notebook>
                <page string="Soil Nutrient Balance" name="nutrient_balance" invisible="intervention_type not in ['fertilizing', 'tillage']">
                    <group>
                        <group string="Current Application (Pure Nutrient)">
                            <field name="pure_n_qty"/>
                            <field name="pure_p_qty"/>
                            <field name="pure_k_qty"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Kanban View for Interventions -->
    <record id="mrp_production_kanban_view_inherit_farm" model="ir.ui.view">
        <field name="name">mrp.production.kanban.inherit.farm</field>
        <field name="model">mrp.production</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="product_id"/>
                <field name="intervention_type"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'confirmed': 'info', 'progress': 'warning', 'done': 'success'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><i class="fa fa-tag me-1"/> <field name="intervention_type"/></div>
                                <div><i class="fa fa-cube me-1"/> <field name="product_id"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View for Interventions -->
    <record id="mrp_production_calendar_view_inherit_farm" model="ir.ui.view">
        <field name="name">mrp.production.calendar.inherit.farm</field>
        <field name="model">mrp.production</field>
        <field name="arch" type="xml">
            <calendar string="Intervention Schedule" date_start="date_start" date_stop="date_finished" color="intervention_type" quick_create="0">
                <field name="name"/>
                <field name="product_id"/>
                <field name="intervention_type" filters="1"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View for Performance Analysis -->
    <record id="mrp_production_pivot_view_inherit_farm" model="ir.ui.view">
        <field name="name">mrp.production.pivot.inherit.farm</field>
        <field name="model">mrp.production</field>
        <field name="arch" type="xml">
            <pivot string="Intervention Analysis" sample="1">
                <field name="date_finished" interval="month" type="col"/>
                <field name="intervention_type" type="row"/>
                <field name="product_qty" type="measure"/>
                <field name="total_agri_cost" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Update Action to include all views -->
    <record id="mrp.mrp_production_action" model="ir.actions.act_window">
        <field name="view_mode">list,kanban,form,calendar,pivot,graph</field>
    </record>
</odoo>
