<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="farm_geofence_view_list" model="ir.ui.view">
        <field name="name">farm.geofence.list</field>
        <field name="model">farm.geofence</field>
        <field name="arch" type="xml">
            <list string="Geofences">
                <field name="name"/>
                <field name="fence_type" widget="badge" decoration-info="fence_type == 'grazing'" decoration-danger="fence_type == 'no_fly'"/>
                <field name="target_category"/>
                <field name="alarm_level" widget="badge" decoration-warning="alarm_level == 'warning'" decoration-danger="alarm_level == 'critical'"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="farm_geofence_view_form" model="ir.ui.view">
        <field name="name">farm.geofence.form</field>
        <field name="model">farm.geofence</field>
        <field name="arch" type="xml">
            <form string="Geofence">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="e.g. North Pasture Fence"/></h1>
                    </div>
                    <group>
                        <group string="Definition">
                            <field name="fence_type"/>
                            <field name="target_category"/>
                        </group>
                        <group string="Alarm Strategy">
                            <field name="alarm_level"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Boundary Data">
                        <field name="coordinates" placeholder="lon,lat;lon,lat;lon,lat... (Close the loop)"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_farm_geofence" model="ir.actions.act_window">
        <field name="name">Geofences</field>
        <field name="res_model">farm.geofence</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_farm_geofence" name="Geofences" parent="menu_farm_config" action="action_farm_geofence" sequence="50"/>
</odoo>
