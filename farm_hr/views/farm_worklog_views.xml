<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="farm_worklog_view_tree" model="ir.ui.view">
        <field name="name">farm.worklog.list</field>
        <field name="model">farm.worklog</field>
        <field name="arch" type="xml">
            <list string="Field Worklogs" editable="bottom">
                <field name="date"/>
                <field name="employee_id"/>
                <field name="task_id"/>
                <field name="work_type"/>
                <field name="quantity"/>
                <field name="uom_id"/>
            </list>
        </field>
    </record>

    <record id="action_farm_worklog" model="ir.actions.act_window">
        <field name="name">Field Worklogs</field>
        <field name="res_model">farm.worklog</field>
        <field name="view_mode">list,form,pivot,graph</field>
    </record>

    <menuitem id="menu_farm_hr_root" name="Labor &amp; HR" sequence="70"/>
    <menuitem id="menu_farm_worklog" name="Field Worklogs" parent="menu_farm_hr_root" action="action_farm_worklog" sequence="10"/>
</odoo>
