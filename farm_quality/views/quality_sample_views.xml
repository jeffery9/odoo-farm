<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="farm_quality_sample_view_tree" model="ir.ui.view">
        <field name="name">farm.quality.sample.list</field>
        <field name="model">farm.quality.sample</field>
        <field name="arch" type="xml">
            <list string="Quality Samples" decoration-danger="expiry_date &lt; today">
                <field name="name"/>
                <field name="lot_id"/>
                <field name="product_id"/>
                <field name="expiry_date"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="action_farm_quality_sample" model="ir.actions.act_window">
        <field name="name">Retention Samples</field>
        <field name="res_model">farm.quality.sample</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_quality_sample" name="Samples" parent="menu_quality_root" action="action_farm_quality_sample" sequence="25"/>
</odoo>
