<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Extend System Settings -->
    <record id="res_config_settings_view_form_data_security" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.data.security</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='web_settings']" position="after">
                <h2>Data Security &amp; Compliance (CN)</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="data_storage_region"/>
                            <div class="text-muted">
                                Ensure data storage complies with China's localization requirements.
                            </div>
                            <field name="data_storage_region"/>
                            <button name="action_check_data_localization" string="Check Localization Status" type="object" class="btn-link"/>
                        </div>
                        <div class="o_setting_right_pane mt-3">
                            <label for="is_dengbao_level3_compliant"/>
                            <div class="text-muted">
                                Declare compliance with Cybersecurity Classified Protection Level 3 requirements.
                            </div>
                            <field name="is_dengbao_level3_compliant"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</oo>
