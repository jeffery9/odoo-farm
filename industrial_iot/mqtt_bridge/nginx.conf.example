# Nginx Configuration for Industrial IoT MQTT Bridge

# Upstream configuration for MQTT Bridge (if running multiple instances)
upstream mqtt_bridge_backend {
    server 127.0.0.1:8000;  # Single instance
    # For multiple instances, uncomment and add more:
    # server 127.0.0.1:8001;
    # server 127.0.0.1:8002;
    keepalive 32;
}

# Main server configuration
server {
    listen 80;
    server_name mqtt-bridge.yourdomain.com;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS server configuration
server {
    listen 443 ssl http2;
    server_name mqtt-bridge.yourdomain.com;

    # SSL Configuration
    ssl_certificate /path/to/your/ssl/certificate.crt;
    ssl_certificate_key /path/to/your/ssl/private.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Security headers
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Client max body size (adjust based on your needs)
    client_max_body_size 10M;

    # Logging
    access_log /var/log/nginx/mqtt-bridge.access.log;
    error_log /var/log/nginx/mqtt-bridge.error.log;

    # Main application location
    location / {
        proxy_pass http://mqtt_bridge_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;

        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Buffer settings
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;

        # Allow WebSockets (if MQTT bridge supports WS)
        proxy_set_header Sec-WebSocket-Protocol $http_sec_websocket_protocol;
    }

    # Health check endpoint
    location /health {
        access_log off;  # Don't log health checks to reduce log noise
        proxy_pass http://mqtt_bridge_backend/health;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # API-specific settings
    location /api/ {
        proxy_pass http://mqtt_bridge_backend/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;

        # API specific timeouts
        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
    }
}

# Rate limiting example (optional)
# Define rate limit zones
limit_req_zone $binary_remote_addr zone=mqtt_bridge_api:10m rate=10r/s;
limit_req_zone $binary_remote_addr zone=mqtt_bridge_general:10m rate=5r/s;

# Server with rate limiting applied
server {
    listen 444 ssl http2;  # Alternative port with rate limiting
    server_name mqtt-bridge-limited.yourdomain.com;

    # SSL Configuration (same as above)
    ssl_certificate /path/to/your/ssl/certificate.crt;
    ssl_certificate_key /path/to/your/ssl/private.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384;

    access_log /var/log/nginx/mqtt-bridge-limited.access.log;
    error_log /var/log/nginx/mqtt-bridge-limited.error.log;

    # Apply rate limiting to API endpoints
    location /api/ {
        limit_req zone=mqtt_bridge_api burst=20 nodelay;
        proxy_pass http://mqtt_bridge_backend/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Apply general rate limiting to all other paths
    location / {
        limit_req zone=mqtt_bridge_general burst=10 nodelay;
        proxy_pass http://mqtt_bridge_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# Configuration for subdomain (alternative setup)
server {
    listen 443 ssl http2;
    server_name api.mqtt-bridge.yourdomain.com;

    # SSL Configuration
    ssl_certificate /path/to/your/ssl/certificate.crt;
    ssl_certificate_key /path/to/your/ssl/private.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384;

    access_log /var/log/nginx/mqtt-bridge-api.access.log;
    error_log /var/log/nginx/mqtt-bridge-api.error.log;

    # Specific API routes
    location ~ ^/api/v1/(config|telemetry|command|ota)/ {
        proxy_pass http://mqtt_bridge_backend$request_uri;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Additional security headers for API
        add_header X-Robots-Tag "none" always;
        add_header Content-Security-Policy "default-src 'self'" always;
    }

    # Root path and health check
    location = / {
        proxy_pass http://mqtt_bridge_backend/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location = /health {
        access_log off;
        proxy_pass http://mqtt_bridge_backend/health;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}