<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Device Tree View -->
    <record id="view_iiot_device_tree" model="ir.ui.view">
        <field name="name">iiot.device.tree</field>
        <field name="model">iiot.device</field>
        <field name="arch" type="xml">
            <list string="IIoT设备">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="device_id"/>
                <field name="profile_id"/>
                <field name="connection_status"/>
                <field name="firmware_version"/>
                <field name="is_active"/>
                <field name="last_telemetry"/>
            </list>
        </field>
    </record>

    <!-- Device Form View -->
    <record id="view_iiot_device_form" model="ir.ui.view">
        <field name="name">iiot.device.form</field>
        <field name="model">iiot.device</field>
        <field name="arch" type="xml">
            <form string="IIoT设备">
                <header>
                    <button name="action_generate_config_token" string="生成配置令牌" type="object" class="btn-primary"/>
                    <field name="connection_status" widget="statusbar" statusbar_visible="online"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" name="%(action_iiot_update)d" context="{'default_device_id': active_id}" icon="fa-upload">
                            <div>OTA升级</div>
                        </button>
                    </div>
                    <group>
                        <group string="Device Info">
                            <field name="serial_number"/>
                            <field name="device_id"/>
                            <field name="profile_id"/>
                        </group>
                        <group string="Status &amp; Control">
                            <field name="is_active"/>
                            <field name="is_camera"/>
                            <field name="firmware_version"/>
                            <field name="connection_status" widget="badge" decoration-success="connection_status == 'online'" decoration-danger="connection_status == 'error'" decoration-info="connection_status == 'offline'"/>
                            <field name="last_telemetry"/>
                            <field name="last_command"/>
                        </group>
                    </group>
                    <group string="Remote Control" name="remote_control">
                        <button name="send_command" string="Power On (开启)" type="object" context="{'action': 'power', 'params': {'state': 'on'}}" class="oe_highlight"/>
                        <button name="send_command" string="Power Off (关闭)" type="object" context="{'action': 'power', 'params': {'state': 'off'}}" class="oe_highlight"/>
                        <button name="send_command" string="Reset (重启)" type="object" context="{'action': 'reset'}" class="oe_highlight"/>
                        <field name="live_stream_url" widget="url" invisible="not is_camera"/>
                    </group>
                    <notebook>
                        <page string="Business Ref" name="business_ref_page">
                            <group><field name="business_ref"/></group>
                        </page>
                        <page string="Config &amp; Topics" name="config_topics">
                            <group>
                                <field name="config_token" readonly="1"/>
                                <button name="action_generate_config_token" string="重新生成令牌" type="object" class="btn-secondary"/>
                            </group>
                            <group>
                                <field name="topic_map" widget="json" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Device Action -->
    <record id="action_iiot_device" model="ir.actions.act_window">
        <field name="name">IIoT设备</field>
        <field name="res_model">iiot.device</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>