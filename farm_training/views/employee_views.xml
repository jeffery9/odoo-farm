<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit_training" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.training</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Agricultural Skills &amp; Training" name="agri_training">
                    <group>
                        <group string="Stats">
                            <field name="total_training_hours"/>
                        </group>
                    </group>
                    <group string="Active Certificates">
                        <field name="certificate_ids" nolabel="1">
                            <tree>
                                <field name="certificate_type_id"/>
                                <field name="name"/>
                                <field name="expiry_date"/>
                                <field name="is_valid"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
