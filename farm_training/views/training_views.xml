<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Training Session Views -->
    <record id="view_farm_training_session_tree" model="ir.ui.view">
        <field name="name">farm.training.session.tree</field>
        <field name="model">farm.training.session</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'done'">
                <field name="date"/>
                <field name="name"/>
                <field name="trainer_id"/>
                <field name="hours" sum="Total Hours"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_farm_training_session_form" model="ir.ui.view">
        <field name="name">farm.training.session.form</field>
        <field name="model">farm.training.session</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_complete" string="Mark as Completed" type="object" class="oe_highlight" invisible="state == 'done'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Training Topic"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="trainer_id"/>
                        </group>
                        <group>
                            <field name="hours"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Trainees" name="trainees">
                            <field name="trainee_ids"/>
                        </page>
                        <page string="Content" name="content">
                            <field name="content" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Certificate Views -->
    <record id="view_farm_certificate_tree" model="ir.ui.view">
        <field name="name">farm.certificate.tree</field>
        <field name="model">farm.certificate</field>
        <field name="arch" type="xml">
            <tree decoration-danger="not is_valid">
                <field name="employee_id"/>
                <field name="certificate_type_id"/>
                <field name="name"/>
                <field name="expiry_date"/>
                <field name="is_valid" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_farm_training_session" model="ir.actions.act_window">
        <field name="name">Training Sessions</field>
        <field name="res_model">farm.training.session</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_farm_certificate" model="ir.actions.act_window">
        <field name="name">Farmer Certificates</field>
        <field name="res_model">farm.certificate</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_farm_certificate_type" model="ir.actions.act_window">
        <field name="name">Certificate Types</field>
        <field name="res_model">farm.certificate.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
