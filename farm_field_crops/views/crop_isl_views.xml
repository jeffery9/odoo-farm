<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ISL View for Crop BOM -->
    <record id="view_farm_crop_bom_form" model="ir.ui.view">
        <field name="name">farm.crop.bom.form</field>
        <field name="model">farm.crop.bom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>Crop Recipe</h1>
                    </div>
                    <group>
                        <group string="Core Recipe (Base)">
                            <field name="product_tmpl_id"/>
                            <field name="product_qty"/>
                            <field name="product_uom_id"/>
                        </group>
                        <group string="Crop Standards (ISL)">
                            <field name="growing_season"/>
                            <field name="phi_days"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Components (Base)" name="components">
                            <field name="bom_line_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ISL View for Crop Production -->
    <record id="view_farm_crop_production_form" model="ir.ui.view">
        <field name="name">farm.crop.production.form</field>
        <field name="model">farm.crop.production</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="button_mark_done" type="object" string="Mark as Done" invisible="state != 'confirmed'" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>Crop Field Order</h1>
                    </div>
                    <group>
                        <group string="Order Info (Base)">
                            <field name="product_id"/>
                            <field name="product_qty"/>
                            <field name="bom_id"/>
                            <field name="location_src_id" string="Field/Plot"/>
                        </group>
                        <group string="Crop Specifics (ISL)">
                            <field name="area_to_treat"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_farm_crop_bom_isl" model="ir.actions.act_window">
        <field name="name">Crop Recipes</field>
        <field name="res_model" >farm.crop.bom</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_farm_crop_mo_isl" model="ir.actions.act_window">
        <field name="name">Crop Field Tasks</field>
        <field name="res_model">farm.crop.production</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
