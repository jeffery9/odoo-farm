<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit_farm_marketing" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.farm.marketing</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//list//field[@name='product_uom_qty']" position="after">
                <button name="action_view_traceability" type="object" icon="fa-leaf" title="Traceability" invisible="state != 'sale'"/>
            </xpath>
        </field>
    </record>
</odoo>
