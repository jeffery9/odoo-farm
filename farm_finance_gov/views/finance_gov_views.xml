<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Project Form View -->
    <record id="view_farm_rural_revitalization_project_form" model="ir.ui.view">
        <field name="name">farm.rural.revitalization.project.form</field>
        <field name="model">farm.rural.revitalization.project</field>
        <field name="arch" type="xml">
            <form string="Rural Revitalization Project">
                <header>
                    <button name="%(action_report_project_fund_utilization)d" string="Print Fund Report" type="action" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                        <field name="code"/>
                    </div>
                    <group>
                        <group>
                            <field name="fund_source"/>
                            <field name="budget_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Expenditure Details">
                            <field name="account_move_ids" readonly="1"/>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_expenditure" widget="monetary"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Project Tree View -->
    <record id="view_farm_rural_revitalization_project_tree" model="ir.ui.view">
        <field name="name">farm.rural.revitalization.project.tree</field>
        <field name="model">farm.rural.revitalization.project</field>
        <field name="arch" type="xml">
            <tree string="Rural Revitalization Projects">
                <field name="name"/>
                <field name="code"/>
                <field name="fund_source"/>
                <field name="budget_amount"/>
                <field name="total_expenditure"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_farm_rural_revitalization_project" model="ir.actions.act_window">
        <field name="name">Rural Revitalization Projects</field>
        <field name="res_model">farm.rural.revitalization.project</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_farm_finance_gov_root" name="Govt. Funds (CN)" parent="farm_financial.menu_farm_finance_root" sequence="40"/>
    <menuitem id="menu_farm_rural_revitalization_project" name="Rural Revitalization" parent="menu_farm_finance_gov_root" action="action_farm_rural_revitalization_project" sequence="10"/>

    <!-- Extend Account Move Form to link project -->
    <record id="view_account_move_form_inherit_finance_gov" model="ir.ui.view">
        <field name="name">account.move.form.inherit.finance.gov</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="rural_project_id"/>
            </xpath>
        </field>
    </record>
</oo>
