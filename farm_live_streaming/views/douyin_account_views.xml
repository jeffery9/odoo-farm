<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 抖音账号配置视图 -->
    <record id="view_douyin_account_tree" model="ir.ui.view">
        <field name="name">douyin.account.tree</field>
        <field name="model">douyin.account</field>
        <field name="arch" type="xml">
            <tree string="Douyin Accounts">
                <field name="name"/>
                <field name="app_id"/>
                <field name="shop_id"/>
                <field name="is_active"/>
                <field name="last_sync_time"/>
            </tree>
        </field>
    </record>

    <record id="view_douyin_account_form" model="ir.ui.view">
        <field name="name">douyin.account.form</field>
        <field name="model">douyin.account</field>
        <field name="arch" type="xml">
            <form string="Douyin Account">
                <header>
                    <button name="action_authorize" type="object" string="Authorize" class="oe_highlight" attrs="{'invisible': [('access_token', '!=', False)]}"/>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="app_id"/>
                            <field name="app_secret" password="True"/>
                        </group>
                        <group>
                            <field name="shop_id"/>
                            <field name="live_room_ids"/>
                            <field name="last_sync_time"/>
                        </group>
                    </group>
                    <group string="Tokens">
                        <field name="access_token" password="True"/>
                        <field name="refresh_token" password="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 直播会话视图 -->
    <record id="view_live_streaming_session_tree" model="ir.ui.view">
        <field name="name">live.streaming.session.tree</field>
        <field name="model">live.streaming.session</field>
        <field name="arch" type="xml">
            <tree string="Live Streaming Sessions">
                <field name="name"/>
                <field name="douyin_account_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="status"/>
                <field name="view_count"/>
                <field name="like_count"/>
            </tree>
        </field>
    </record>

    <record id="view_live_streaming_session_form" model="ir.ui.view">
        <field name="name">live.streaming.session.form</field>
        <field name="model">live.streaming.session</field>
        <field name="arch" type="xml">
            <form string="Live Streaming Session">
                <header>
                    <button name="action_start_live" type="object" string="Start Live" class="oe_highlight" attrs="{'invisible': [('status', '!=', 'planned')]}"/>
                    <button name="action_end_live" type="object" string="End Live" attrs="{'invisible': [('status', '!=', 'live')]}"/>
                    <button name="action_archive_live" type="object" string="Archive" attrs="{'invisible': [('status', '!=', 'ended')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="planned,live,ended,archived"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="douyin_account_id"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                        </group>
                        <group>
                            <field name="preview_url"/>
                            <field name="live_url"/>
                            <field name="description"/>
                        </group>
                    </group>
                    <group string="Products in Live">
                        <field name="products" widget="many2many_tags"/>
                    </group>
                    <group string="Statistics" attrs="{'invisible': [('status', '=', 'planned')]}">
                        <group>
                            <field name="view_count"/>
                            <field name="like_count"/>
                            <field name="comment_count"/>
                        </group>
                    </group>
                    <group string="Archive" attrs="{'invisible': [('status', '!=', 'archived')]}">
                        <field name="video_archive" filename="name"/>
                        <field name="archive_url"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 菜单 -->
    <menuitem id="menu_live_streaming_root" 
              name="Live Streaming" 
              sequence="40"
              groups="farm_core.group_farm_manager"/>

    <menuitem id="menu_douyin_accounts" 
              name="Douyin Accounts" 
              parent="menu_live_streaming_root" 
              action="action_douyin_accounts"/>

    <menuitem id="menu_live_sessions" 
              name="Live Sessions" 
              parent="menu_live_streaming_root" 
              action="action_live_sessions"/>

    <!-- 动作 -->
    <record id="action_douyin_accounts" model="ir.actions.act_window">
        <field name="name">Douyin Accounts</field>
        <field name="res_model">douyin.account</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_live_sessions" model="ir.actions.act_window">
        <field name="name">Live Streaming Sessions</field>
        <field name="res_model">live.streaming.session</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>