<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Douyin Account Views -->
    <record id="view_douyin_account_list" model="ir.ui.view">
        <field name="name">douyin.account.list</field>
        <field name="model">douyin.account</field>
        <field name="arch" type="xml">
            <list decoration-danger="health_status == 'error'" decoration-warning="health_status == 'warning'">
                <field name="name"/>
                <field name="client_key"/>
                <field name="state" widget="badge" decoration-success="state == 'authorized'"/>
                <field name="health_status" widget="badge" decoration-success="health_status == 'healthy'" decoration-warning="health_status == 'warning'" decoration-danger="health_status == 'error'"/>
                <field name="token_expiry"/>
                <field name="last_health_check"/>
            </list>
        </field>
    </record>

    <record id="view_douyin_account_form" model="ir.ui.view">
        <field name="name">douyin.account.form</field>
        <field name="model">douyin.account</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_authorize" string="Link Douyin Account" type="object" class="oe_highlight" invisible="state == 'authorized'"/>
                    <button name="action_sync_orders" string="Sync Paid Orders" type="object" class="btn-primary" invisible="state != 'authorized'"/>
                    <button name="action_verify_connection" string="Verify Connection" type="object" invisible="state != 'authorized'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Account Name"/></h1>
                    </div>
                    <group>
                        <group string="API Credentials">
                            <field name="client_key"/>
                            <field name="client_secret" password="1"/>
                            <field name="shop_id"/>
                        </group>
                        <group string="Auth &amp; Health">
                            <field name="health_status" widget="badge" decoration-success="health_status == 'healthy'" decoration-warning="health_status == 'warning'" decoration-danger="health_status == 'error'"/>
                            <field name="last_health_check"/>
                            <field name="token_expiry"/>
                            <field name="responsible_user_id" widget="many2one_avatar_user"/>
                        </group>
                    </group>
                    <group string="Tokens" groups="base.group_no_one">
                        <field name="access_token" password="1"/>
                        <field name="refresh_token" password="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Douyin Product Mapping -->
    <record id="view_douyin_product_list" model="ir.ui.view">
        <field name="name">douyin.product.list</field>
        <field name="model">douyin.product</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="account_id"/>
                <field name="product_id"/>
                <field name="douyin_item_id"/>
                <field name="sync_state" widget="badge"/>
                <button name="action_sync_to_douyin" string="Sync" type="object" icon="fa-refresh"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_douyin_account" model="ir.actions.act_window">
        <field name="name">Douyin Accounts</field>
        <field name="res_model">douyin.account</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_douyin_product" model="ir.actions.act_window">
        <field name="name">Product Mapping</field>
        <field name="res_model">douyin.product</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="menu_douyin_config" name="Douyin Integration" parent="farm_core.menu_farm_root" sequence="90"/>
    <menuitem id="menu_douyin_account" name="Accounts" parent="menu_douyin_config" action="action_douyin_account" sequence="10"/>
    <menuitem id="menu_douyin_product" name="Shop Sync" parent="menu_douyin_config" action="action_douyin_product" sequence="20"/>
</odoo>
