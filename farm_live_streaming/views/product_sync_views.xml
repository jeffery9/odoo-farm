<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 产品同步视图 -->
    <record id="view_product_sync_tree" model="ir.ui.view">
        <field name="name">product.sync.tree</field>
        <field name="model">product.sync</field>
        <field name="arch" type="xml">
            <tree string="Product Sync Status" decoration-danger="sync_status=='error'" decoration-info="sync_status=='synced'" decoration-muted="sync_status=='not_synced'">
                <field name="product_id"/>
                <field name="douyin_account_id"/>
                <field name="douyin_product_id"/>
                <field name="sync_status"/>
                <field name="last_sync_time"/>
                <field name="sync_error"/>
            </tree>
        </field>
    </record>

    <record id="view_product_sync_form" model="ir.ui.view">
        <field name="name">product.sync.form</field>
        <field name="model">product.sync</field>
        <field name="arch" type="xml">
            <form string="Product Sync">
                <header>
                    <button name="sync_single_product" type="object" string="Sync Now" class="oe_highlight"/>
                    <field name="sync_status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="douyin_account_id"/>
                            <field name="douyin_product_id"/>
                        </group>
                        <group>
                            <field name="is_active"/>
                            <field name="last_sync_time"/>
                        </group>
                    </group>
                    <group string="Sync Details" attrs="{'invisible': [('sync_error', '=', False)]}">
                        <field name="sync_error" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 菜单项 -->
    <menuitem id="menu_product_sync" 
              name="Product Sync" 
              parent="menu_live_streaming_root" 
              action="action_product_sync"/>

    <!-- 动作 -->
    <record id="action_product_sync" model="ir.actions.act_window">
        <field name="name">Product Sync with Douyin</field>
        <field name="res_model">product.sync</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>