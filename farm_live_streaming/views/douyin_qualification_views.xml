<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_douyin_qualification_form" model="ir.ui.view">
        <field name="name">douyin.qualification.form</field>
        <field name="model">douyin.qualification</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_perform_pre_audit" string="Run Pre-Audit" type="object" class="oe_highlight" invisible="state == 'passed'"/>
                    <button name="action_go_to_douyin_register" string="Apply on Douyin" type="object" class="btn-success" invisible="state != 'passed'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="Company Info">
                            <field name="uscc"/>
                            <field name="legal_person_name"/>
                            <field name="cert_expiry_date"/>
                        </group>
                        <group string="Documents">
                            <field name="business_license" widget="image" options="{'size': [100, 100]}"/>
                            <field name="food_license" widget="image" options="{'size': [100, 100]}"/>
                        </group>
                    </group>
                    <group string="Identity Verification">
                        <field name="id_card_front" widget="image" options="{'size': [150, 100]}"/>
                        <field name="id_card_back" widget="image" options="{'size': [150, 100]}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_douyin_qualification" model="ir.actions.act_window">
        <field name="name">Onboarding Pre-Audit</field>
        <field name="res_model">douyin.qualification</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_douyin_qualification" name="Onboarding Pre-Audit" parent="menu_douyin_config" action="action_douyin_qualification" sequence="5"/>
</odoo>
