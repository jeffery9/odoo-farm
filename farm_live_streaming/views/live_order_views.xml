<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 直播订单视图 -->
    <record id="view_live_order_tree" model="ir.ui.view">
        <field name="name">live.order.tree</field>
        <field name="model">live.order</field>
        <field name="arch" type="xml">
            <tree string="Live Orders">
                <field name="name"/>
                <field name="douyin_order_id"/>
                <field name="douyin_account_id"/>
                <field name="product_id"/>
                <field name="total_amount"/>
                <field name="status"/>
                <field name="create_time"/>
            </tree>
        </field>
    </record>

    <record id="view_live_order_form" model="ir.ui.view">
        <field name="name">live.order.form</field>
        <field name="model">live.order</field>
        <field name="arch" type="xml">
            <form string="Live Order">
                <header>
                    <button name="create_sale_order" type="object" string="Create Sale Order" class="oe_highlight" attrs="{'invisible': [('origin_order_id', '!=', False)]}"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="douyin_order_id"/>
                            <field name="douyin_account_id"/>
                            <field name="live_session_id"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            <field name="total_amount"/>
                        </group>
                    </group>
                    <group string="Customer Information">
                        <field name="customer_name"/>
                        <field name="customer_phone"/>
                        <field name="customer_address"/>
                    </group>
                    <group string="Timeline">
                        <field name="create_time"/>
                        <field name="pay_time"/>
                        <field name="ship_time"/>
                        <field name="receive_time"/>
                    </group>
                    <group string="Internal Order" attrs="{'invisible': [('origin_order_id', '=', False)]}">
                        <field name="origin_order_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 菜单项 -->
    <menuitem id="menu_live_orders" 
              name="Live Orders" 
              parent="menu_live_streaming_root" 
              action="action_live_orders"/>

    <!-- 动作 -->
    <record id="action_live_orders" model="ir.actions.act_window">
        <field name="name">Orders from Live Streaming</field>
        <field name="res_model">live.order</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>