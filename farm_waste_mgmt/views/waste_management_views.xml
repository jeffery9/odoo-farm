<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_farm_processing_waste_tree" model="ir.ui.view">
        <field name="name">farm.processing.waste.tree</field>
        <field name="model">farm.processing.waste</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="production_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="uom_id"/>
                <field name="disposal_method"/>
            </tree>
        </field>
    </record>

    <record id="action_farm_processing_waste" model="ir.actions.act_window">
        <field name="name">Waste Management</field>
        <field name="res_model">farm.processing.waste</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
