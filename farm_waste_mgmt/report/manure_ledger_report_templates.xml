<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_moara_manure_ledger_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.lang)"/>
            <div class="page">
                <div class="text-center">
                    <h2>畜禽粪污资源化利用月度台账</h2>
                    <h3>Livestock and Poultry Manure Utilization Monthly Ledger (MOARA)</h3>
                </div>

                <table class="table table-sm table-bordered mt32">
                    <tr>
                        <td><strong>Ledger No.:</strong></td>
                        <td><span t-field="doc.ledger_no"/></td>
                        <td><strong>Year:</strong></td>
                        <td><span t-field="doc.year"/></td>
                    </tr>
                    <tr>
                        <td><strong>Month:</strong></td>
                        <td><span t-field="doc.month"/></td>
                        <td><strong>总处理量 (kg) / Total Disposed Qty (kg):</strong></td>
                        <td><span t-field="doc.total_quantity_disposed"/></td>
                    </tr>
                </table>

                <h3 class="mt32">Manure Batch Details:</h3>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>Batch No.</th>
                            <th>Production Date</th>
                            <th>数量 (kg) / Quantity (kg)</th>
                            <th>Source</th>
                            <th>Disposal Method</th>
                            <th>Destination/Recipient</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.batch_ids" t-as="batch">
                            <tr>
                                <td><span t-field="batch.batch_no"/></td>
                                <td><span t-field="batch.production_date"/></td>
                                <td><span t-field="batch.quantity"/></td>
                                <td><span t-field="batch.lot_source_ids"/></td>
                                <td><span t-field="batch.disposal_method"/></td>
                                <td><t t-if="batch.disposal_method == 'direct_field_use'"><span t-field="batch.destination_location_id"/></t><t t-if="batch.disposal_method == 'transfer_third_party'"><span t-field="batch.recipient_partner_id"/></t></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <div class="mt-5 text-right">
                    <p><strong>畜牧场主：</strong></p>
                    <p>____________________</p>
                    <p>（日期：<span t-esc="datetime.now().strftime('%Y年%m月%d日')"/>）</p>
                </div>
            </div>
        </t>
    </template>
</odoo>
