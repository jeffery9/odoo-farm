<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Stock Lot Kanban View [US-UX] -->
    <record id="view_stock_lot_kanban_livestock" model="ir.ui.view">
        <field name="name">stock.lot.kanban.livestock</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="biological_stage" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="product_id"/>
                <field name="animal_count"/>
                <field name="current_predicted_weight"/>
                <field name="biological_stage"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <span class="badge rounded-pill bg-info float-end"><field name="animal_count"/> animals</span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><field name="product_id"/></div>
                                <div class="text-muted">
                                    Predicted Weight: <field name="current_predicted_weight" widget="float" options="{'precision': 2}"/> kg
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="biological_stage" widget="label_selection" options="{'classes': {'born': 'info', 'growing': 'warning', 'finished': 'success', 'harvested': 'default'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Stock Lot Pivot View [US-UX] -->
    <record id="view_stock_lot_pivot_livestock" model="ir.ui.view">
        <field name="name">stock.lot.pivot.livestock</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <pivot string="Livestock Analysis">
                <field name="product_id" type="row"/>
                <field name="biological_stage" type="col"/>
                <field name="animal_count" type="measure"/>
                <field name="current_predicted_weight" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action for Animal Batches -->
    <record id="action_livestock_lot" model="ir.actions.act_window">
        <field name="name">Animal Batches</field>
        <field name="res_model">stock.lot</field>
        <field name="view_mode">kanban,list,form,pivot</field>
        <field name="context">{'search_default_group_by_product': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage your livestock batches and track their growth.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_livestock_lot" name="Batches &amp; Groups" parent="menu_livestock_root" action="action_livestock_lot" sequence="5"/>
</odoo>
