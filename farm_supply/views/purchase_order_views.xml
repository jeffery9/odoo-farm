<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_order_form_inherit_farm" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.farm</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="agri_task_id" options="{'no_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//list//field[@name='product_id']" position="after">
                <field name="is_compliance_warning" column_invisible="True"/>
                <button name="action_show_compliance_warning" type="object" icon="fa-exclamation-triangle" class="text-danger" invisible="not is_compliance_warning" title="Non-compliant input for organic farming!"/>
            </xpath>
        </field>
    </record>
</odoo>
