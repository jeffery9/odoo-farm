<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_farm_loan_tree" model="ir.ui.view">
        <field name="name">farm.loan.list</field>
        <field name="model">farm.loan</field>
        <field name="arch" type="xml">
            <list string="Agricultural Loans">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="loan_type"/>
                <field name="amount_principal"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_farm_loan_form" model="ir.ui.view">
        <field name="name">farm.loan.form</field>
        <field name="model">farm.loan</field>
        <field name="arch" type="xml">
            <form string="Loan Application">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,active,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="loan_type"/>
                            <field name="amount_principal"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_maturity"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Collateral" invisible="loan_type != 'biological'">
                            <field name="collateral_lot_ids"/>
                            <group class="oe_subtotal_footer">
                                <field name="collateral_value"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_farm_loan" model="ir.actions.act_window">
        <field name="name">Loans &amp; Credit</field>
        <field name="res_model">farm.loan</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_farm_finance_loan" name="Loans" parent="farm_financial.menu_farm_finance_root" action="action_farm_loan" sequence="30"/>
</odoo>
