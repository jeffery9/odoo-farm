<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_weather" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.weather</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='contacts_settings']" position="after">
                <h2>Agricultural Weather</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="weather_api_key"/>
                            <div class="text-muted">
                                Integration with OpenWeatherMap API for 5-day forecasts.
                            </div>
                            <field name="weather_api_key"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
