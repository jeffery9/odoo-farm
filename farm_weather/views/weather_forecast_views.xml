<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Weather Forecast List View -->
    <record id="view_weather_forecast_tree" model="ir.ui.view">
        <field name="name">farm.weather.forecast.list</field>
        <field name="model">farm.weather.forecast</field>
        <field name="arch" type="xml">
            <list string="Weather Forecast" decoration-danger="is_warning">
                <field name="date"/>
                <field name="location_id"/>
                <field name="condition"/>
                <field name="temp_max"/>
                <field name="temp_min"/>
                <field name="precipitation"/>
                <field name="humidity"/>
                <field name="is_warning" invisible="1"/>
                <field name="warning_type" widget="badge" decoration-danger="warning_type"/>
            </list>
        </field>
    </record>

    <!-- Weather Forecast Form View -->
    <record id="view_weather_forecast_form" model="ir.ui.view">
        <field name="name">farm.weather.forecast.form</field>
        <field name="model">farm.weather.forecast</field>
        <field name="arch" type="xml">
            <form string="Weather Detail">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="date"/> - <field name="location_id"/></h1>
                    </div>
                    <group>
                        <group string="Conditions">
                            <field name="condition"/>
                            <field name="temp_max"/>
                            <field name="temp_min"/>
                        </group>
                        <group string="Metrix">
                            <field name="precipitation"/>
                            <field name="humidity"/>
                            <field name="wind_speed"/>
                        </group>
                    </group>
                    <div class="alert alert-danger" role="alert" invisible="not is_warning">
                        <strong>Weather Warning!</strong> Potential <field name="warning_type"/> detected for this date.
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Weather Kanban View -->
    <record id="view_weather_forecast_kanban" model="ir.ui.view">
        <field name="name">farm.weather.forecast.kanban</field>
        <field name="model">farm.weather.forecast</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="condition"/>
                <field name="temp_max"/>
                <field name="temp_min"/>
                <field name="is_warning"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click #{record.is_warning.raw_value ? 'oe_kanban_color_1' : ''}">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="date"/></strong>
                                <div><field name="location_id"/></div>
                                <div>
                                    <span class="badge rounded-pill text-bg-info"><field name="condition"/></span>
                                </div>
                                <div class="mt-2">
                                    <i class="fa fa-thermometer-three-quarters"/> <field name="temp_max"/>° / <field name="temp_min"/>°
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_farm_weather" model="ir.actions.act_window">
        <field name="name">Weather Forecast</field>
        <field name="res_model">farm.weather.forecast</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <menuitem id="menu_farm_weather" name="Weather" parent="farm_core.menu_farm_root" sequence="55"/>
    <menuitem id="menu_farm_weather_forecast" name="Forecast" parent="menu_farm_weather" action="action_farm_weather" sequence="10"/>
</odoo>
