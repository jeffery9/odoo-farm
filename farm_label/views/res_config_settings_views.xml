<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_label" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.label</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='contacts_settings']" position="after">
                <h2>Agricultural Labels</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="label_background_image"/>
                            <div class="text-muted">
                                Set a global background image for all printed labels and signage.
                            </div>
                            <field name="label_background_image" widget="image" class="w-25 mt-2"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
