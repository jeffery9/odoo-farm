<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="agri_intervention_template_view_tree" model="ir.ui.view">
        <field name="name">agri.intervention.template.list</field>
        <field name="model">agri.intervention.template</field>
        <field name="arch" type="xml">
            <list string="Intervention Templates">
                <field name="name"/>
                <field name="intervention_type"/>
                <field name="estimated_labor_hours"/>
            </list>
        </field>
    </record>

    <record id="agri_intervention_template_view_form" model="ir.ui.view">
        <field name="name">agri.intervention.template.form</field>
        <field name="model">agri.intervention.template</field>
        <field name="arch" type="xml">
            <form string="Intervention Template">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Standard Sowing"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="intervention_type"/>
                        </group>
                        <group>
                            <field name="estimated_labor_hours" widget="float_time"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Estimated Inputs" name="inputs">
                            <field name="input_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_agri_intervention_template" model="ir.actions.act_window">
        <field name="name">Intervention Templates</field>
        <field name="res_model">agri.intervention.template</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_agri_intervention_template" name="Intervention Templates" parent="menu_farm_planning_root" action="action_agri_intervention_template" sequence="30"/>
</odoo>
