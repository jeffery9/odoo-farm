<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Technical Route -->
    <record id="agri_technical_route_view_tree" model="ir.ui.view">
        <field name="name">agri.technical.route.list</field>
        <field name="model">agri.technical.route</field>
        <field name="arch" type="xml">
            <list string="Technical Routes">
                <field name="name"/>
                <field name="activity_family"/>
            </list>
        </field>
    </record>

    <record id="agri_technical_route_view_form" model="ir.ui.view">
        <field name="name">agri.technical.route.form</field>
        <field name="model">agri.technical.route</field>
        <field name="arch" type="xml">
            <form string="Technical Route">
                <header>
                    <!-- Future: Button to apply to a campaign -->
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Winter Wheat Standard"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="activity_family"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Intervention Sequence" name="sequence">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="template_id"/>
                                    <field name="delay_days"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_agri_technical_route" model="ir.actions.act_window">
        <field name="name">Technical Routes</field>
        <field name="res_model">agri.technical.route</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu items -->
    <menuitem id="menu_farm_planning_root" name="Planning" parent="farm_core.menu_farm_root" sequence="20"/>
    <menuitem id="menu_agri_technical_route" name="Technical Routes" parent="menu_farm_planning_root" action="action_agri_technical_route" sequence="10"/>

</odoo>
