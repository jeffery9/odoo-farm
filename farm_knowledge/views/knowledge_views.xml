<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_farm_pest_disease_kanban" model="ir.ui.view">
        <field name="name">farm.pest.disease.kanban</field>
        <field name="model">farm.pest.disease</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="photo"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('farm.pest.disease', 'photo', record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><field name="category"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_farm_pest_disease_form" model="ir.ui.view">
        <field name="name">farm.pest.disease.form</field>
        <field name="model">farm.pest.disease</field>
        <field name="arch" type="xml">
            <form string="Pest &amp; Disease">
                <sheet>
                    <field name="photo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                        <h3><field name="scientific_name"/></h3>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="recommended_intervention_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Symptoms">
                            <field name="symptoms"/>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_farm_pest_disease" model="ir.actions.act_window">
        <field name="name">Pest &amp; Diseases Library</field>
        <field name="res_model">farm.pest.disease</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <menuitem id="menu_farm_knowledge_root" name="Knowledge Base" parent="farm_core.menu_farm_root" sequence="90"/>
    <menuitem id="menu_farm_pest_disease" name="Pest &amp; Diseases" parent="menu_farm_knowledge_root" action="action_farm_pest_disease" sequence="10"/>
</odoo>
