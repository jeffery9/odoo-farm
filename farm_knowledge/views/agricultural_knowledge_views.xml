<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_agricultural_knowledge_tree" model="ir.ui.view">
        <field name="name">agricultural.knowledge.tree</field>
        <field name="model">agricultural.knowledge</field>
        <field name="arch" type="xml">
            <tree decoration-info="knowledge_type == 'case_study'" decoration-warning="knowledge_type == 'standard'">
                <field name="name"/>
                <field name="category"/>
                <field name="knowledge_type"/>
                <field name="difficulty_level"/>
                <field name="view_count"/>
                <field name="helpful_count"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View for Knowledge [US-UX] -->
    <record id="view_agricultural_knowledge_kanban" model="ir.ui.view">
        <field name="name">agricultural.knowledge.kanban</field>
        <field name="model">agricultural.knowledge</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="category"/>
                <field name="knowledge_type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <span class="badge rounded-pill bg-primary"><field name="category"/></span>
                                <span class="badge rounded-pill bg-info ms-1"><field name="knowledge_type"/></span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <small class="text-muted"><i class="fa fa-eye"/> <field name="view_count"/></small>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <small class="text-muted"><i class="fa fa-thumbs-up"/> <field name="helpful_count"/></small>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Pivot View for Knowledge Stats [US-UX] -->
    <record id="view_agricultural_knowledge_pivot" model="ir.ui.view">
        <field name="name">agricultural.knowledge.pivot</field>
        <field name="model">agricultural.knowledge</field>
        <field name="arch" type="xml">
            <pivot string="Knowledge Analysis">
                <field name="category" type="row"/>
                <field name="knowledge_type" type="col"/>
                <field name="view_count" type="measure"/>
                <field name="helpful_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_agricultural_knowledge_form" model="ir.ui.view">
        <field name="name">agricultural.knowledge.form</field>
        <field name="model">agricultural.knowledge</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_mark_helpful" string="Helpful" type="object" icon="fa-thumbs-up" class="btn-success"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="knowledge_type"/>
                            <field name="industry_specific"/>
                        </group>
                        <group>
                            <field name="difficulty_level"/>
                            <field name="seasonality"/>
                            <field name="author_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="tags" placeholder="e.g. wheat, irrigation, organic"/>
                        <field name="video_url" widget="url"/>
                    </group>
                    <notebook>
                        <page string="Content">
                            <field name="content" widget="html"/>
                        </page>
                        <page string="Related Data">
                            <group>
                                <field name="pest_disease_id"/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_agricultural_knowledge" model="ir.actions.act_window">
        <field name="name">Knowledge Base</field>
        <field name="res_model">agricultural.knowledge</field>
        <field name="view_mode">kanban,tree,form,pivot</field>
    </record>
</odoo>
