<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Booking Calendar View [US-02-03] -->
    <record id="farm_booking_view_calendar" model="ir.ui.view">
        <field name="name">farm.booking.calendar</field>
        <field name="model">farm.booking</field>
        <field name="arch" type="xml">
            <calendar string="Farm Bookings" date_start="date_start" date_stop="date_stop" color="resource_id" mode="week">
                <field name="partner_id"/>
                <field name="resource_id"/>
                <field name="booking_type"/>
            </calendar>
        </field>
    </record>

    <record id="farm_booking_view_tree" model="ir.ui.view">
        <field name="name">farm.booking.list</field>
        <field name="model">farm.booking</field>
        <field name="arch" type="xml">
            <list string="Farm Bookings">
                <field name="date_start"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="resource_id"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="farm_booking_view_form" model="ir.ui.view">
        <field name="name">farm.booking.form</field>
        <field name="model">farm.booking</field>
        <field name="arch" type="xml">
            <form string="Farm Booking">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Booking Ref..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="booking_type"/>
                            <field name="resource_id" invisible="booking_type != 'resource'"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                            <field name="land_parcel_id" invisible="booking_type == 'resource'"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Resource Views -->
    <record id="farm_resource_view_tree" model="ir.ui.view">
        <field name="name">farm.resource.list</field>
        <field name="model">farm.resource</field>
        <field name="arch" type="xml">
            <list string="Farm Resources" editable="bottom">
                <field name="name"/>
                <field name="resource_type"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_farm_booking" model="ir.actions.act_window">
        <field name="name">Activity Bookings</field>
        <field name="res_model">farm.booking</field>
        <field name="view_mode">calendar,list,form</field>
    </record>

    <record id="action_farm_resource" model="ir.actions.act_window">
        <field name="name">Farm Resources</field>
        <field name="res_model">farm.resource</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_agritourism_root" name="Agritourism" sequence="50"/>
    <menuitem id="menu_farm_booking" name="Activity Bookings" parent="menu_agritourism_root" action="action_farm_booking" sequence="10"/>
    <menuitem id="menu_farm_resource" name="Resources" parent="menu_agritourism_root" action="action_farm_resource" sequence="20" groups="farm_core.group_farm_manager"/>
</odoo>