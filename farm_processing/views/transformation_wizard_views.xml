<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_farm_waste_transformation_wizard_form" model="ir.ui.view">
        <field name="name">farm.waste.transformation.wizard.form</field>
        <field name="model">farm.waste.transformation.wizard</field>
        <field name="arch" type="xml">
            <form string="Waste Transformation (Circular Economy)">
                <group>
                    <group string="Step 1: Select Waste Source">
                        <field name="source_lot_id" options="{'no_create': True}"/>
                        <field name="source_product_id"/>
                        <field name="available_qty"/>
                    </group>
                    <group string="Step 2: Define Output Asset">
                        <field name="target_product_id"/>
                        <field name="transformation_qty"/>
                        <field name="output_qty"/>
                    </group>
                </group>
                <footer>
                    <button name="action_transform" string="Execute Transformation" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_farm_waste_transformation" model="ir.actions.act_window">
        <field name="name">Waste Transformation</field>
        <field name="res_model">farm.waste.transformation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
