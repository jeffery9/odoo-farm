<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- US-TECH-06-11: Specialized View for Food Processing BOM -->
    <record id="view_farm_processing_bom_form" model="ir.ui.view">
        <field name="name">farm.processing.bom.form</field>
        <field name="model">farm.processing.bom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>Processing Recipe</h1>
                    </div>
                    <group>
                        <group string="Core Recipe (Base)">
                            <field name="product_tmpl_id"/>
                            <field name="product_qty"/>
                            <field name="product_uom_id"/>
                        </group>
                        <group string="Processing Standards (ISL)">
                            <field name="is_parameter_required"/>
                            <field name="target_temp" invisible="not is_parameter_required"/>
                            <field name="target_ph" invisible="not is_parameter_required"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="HACCP Instructions" name="haccp">
                            <field name="haccp_instructions"/>
                        </page>
                        <page string="Components (Base)" name="components">
                            <field name="bom_line_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for the specialized App -->
    <record id="action_farm_processing_bom_isl" model="ir.actions.act_window">
        <field name="name">Food Recipes (ISL)</field>
        <field name="res_model">farm.processing.bom</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
