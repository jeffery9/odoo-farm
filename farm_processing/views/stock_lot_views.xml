<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_production_lot_form_inherit_farm" model="ir.ui.view">
        <field name="name">stock.lot.form.inherit.farm</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <!-- 1. Purpose Selector in Header -->
            <xpath expr="//field[@name='ref']" position="after">
                <field name="lot_purpose" widget="radio" options="{'horizontal': true}"/>
            </xpath>

            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Livestock Lifecycle" name="biological_asset" invisible="lot_purpose != 'biological_asset'">
                        <div class="oe_title">
                            <h1>
                                <field name="life_stage" widget="statusorder"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Vital Statistics">
                                <field name="birth_date"/>
                                <field name="gender" widget="radio" options="{'horizontal': true}"/>
                                <field name="current_weight" widget="gauge" options="{'max_field': 'weight_target'}"/>
                            </group>
                            <group string="Ancestry Trace">
                                <field name="parent_lot_ids" widget="many2many_tags" string="Sire/Dam Lots"/>
                            </group>
                        </group>
                    </page>
                    <page string="Traceability &amp; Heritage" name="traceability" invisible="lot_purpose == 'biological_asset'">
                        <group>
                            <group string="Ancestry" invisible="lot_purpose == 'harvest'">
                                <field name="parent_lot_ids" widget="many2many_tags"/>
                                <field name="full_traceability_path" invisible="1"/>
                            </group>
                            <group string="Offspring">
                                <field name="child_lot_ids" widget="many2many_tags" readonly="1"/>
                            </group>
                        </group>
                    </page>
                    
                    <page string="Agricultural Heritage (Terroir)" name="terroir" invisible="lot_purpose != 'harvest'">
                        <group>
                            <group>
                                <field name="plot_id"/>
                                <field name="harvest_date"/>
                            </group>
                            <group>
                                <field name="terroir_attributes_json" placeholder='{"soil_ph": 6.5, "sunlight_hours": 1200}'/>
                            </group>
                        </group>
                    </page>

                    <page string="Biological Asset" name="biological_asset" invisible="lot_purpose != 'biological_asset'">
                        <group>
                            <group string="Life Cycle">
                                <field name="birth_date"/>
                                <field name="life_stage" widget="radio" options="{'horizontal': true}"/>
                                <field name="gender"/>
                            </group>
                            <group string="Growth Tracking">
                                <field name="current_weight"/>
                            </group>
                            <group string="Ancestry Trace">
                                <field name="parent_lot_ids" widget="many2many_tags" string="Sire/Dam Lots"/>
                            </group>
                        </group>
                        <group string="Health &amp; Welfare (US-03-03)">
                            <field name="health_activity_ids" nolabel="1" readonly="1">
                                <tree>
                                    <field name="activity_type_id"/>
                                    <field name="summary"/>
                                    <field name="date_deadline"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Spatial Intelligence (GIS)">
                            <group>
                                <field name="last_gps_lat"/>
                                <field name="last_gps_lng"/>
                            </group>
                            <group>
                                <field name="last_location_update" readonly="1"/>
                                <button name="action_update_location_by_gps" string="Sync Plot from GPS" type="object" class="btn-link" icon="fa-map-marker"/>
                            </group>
                        </group>
                    </page>

                    <page string="Quality &amp; GMP" name="quality" invisible="lot_purpose not in ['production', 'lab_sample']">
                        <group>
                            <group string="Grading">
                                <field name="quality_grade" widget="priority"/>
                                <field name="active_content" widget="percentage"/>
                            </group>
                            <group string="Compliance Tags">
                                <field name="is_organic"/>
                                <field name="is_gmo"/>
                                <field name="functional_tags"/>
                            </group>
                        </group>
                    </page>

                    <page string="Logistics" name="logistics">
                        <group>
                            <field name="package_id"/>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>