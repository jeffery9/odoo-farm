<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_fertilizer_pesticide_reduction_trend">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center">
                            <h2>Fertilizer & Pesticide Reduction Audit Report</h2>
                            <h3>Fertilizer &amp; Pesticide Reduction Assessment Report</h3>
                        </div>

                        <table class="table table-sm table-bordered mt32">
                            <tr>
                                <td><strong>Campaign Name:</strong></td>
                                <td><span t-field="doc.name"/></td>
                                <td><strong>Start Date:</strong></td>
                                <td><span t-field="doc.date_start"/></td>
                            </tr>
                        </table>

                        <h3 class="mt32">Fertilizer Usage Comparison:</h3>
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Metric</th>
                                    <th>本季 (kg) / This Season (kg/mu)</th>
                                    <th>上季 (kg) / Last Season (kg/mu)</th>
                                    <th>Reduction (%)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="data" t-value="get_reduction_data(doc)"/>
                                <tr>
                                    <td><strong>Fertilizer</strong></td>
                                    <td><span t-esc="data['fertilizer_this_season']"/></td>
                                    <td><span t-esc="data['fertilizer_prev_season']"/></td>
                                    <td>
                                        <t t-if="data['fertilizer_prev_season'] > 0">
                                            <span t-esc="((data['fertilizer_prev_season'] - data['fertilizer_this_season']) / data['fertilizer_prev_season'] * 100).toFixed(2) + '%'"/>
                                        </t>
                                        <t t-else="">N/A</t>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <h3 class="mt32">Pesticide Usage Comparison:</h3>
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Metric</th>
                                    <th>本季 (kg) / This Season (kg/mu)</th>
                                    <th>上季 (kg) / Last Season (kg/mu)</th>
                                    <th>Reduction (%)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>Pesticide</strong></td>
                                    <td><span t-esc="data['pesticide_this_season']"/></td>
                                    <td><span t-esc="data['pesticide_prev_season']"/></td>
                                    <td>
                                        <t t-if="data['pesticide_prev_season'] > 0">
                                            <span t-esc="((data['pesticide_prev_season'] - data['pesticide_this_season']) / data['pesticide_prev_season'] * 100).toFixed(2) + '%'"/>
                                        </t>
                                        <t t-else="">N/A</t>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
