<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="farm_equipment_checklist_view_list" model="ir.ui.view">
        <field name="name">farm.equipment.checklist.list</field>
        <field name="model">farm.equipment.checklist</field>
        <field name="arch" type="xml">
            <list string="Safety Checklists">
                <field name="name"/>
                <field name="equipment_type"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="farm_equipment_checklist_view_form" model="ir.ui.view">
        <field name="name">farm.equipment.checklist.form</field>
        <field name="model">farm.equipment.checklist</field>
        <field name="arch" type="xml">
            <form string="Safety Checklist">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. UAV Flight Safety Check"/></h1>
                    </div>
                    <group>
                        <field name="equipment_type"/>
                    </group>
                    <notebook>
                        <page string="Check Items">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="is_mandatory"/>
                                    <field name="requires_photo"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_farm_equipment_checklist" model="ir.actions.act_window">
        <field name="name">Safety Checklists</field>
        <field name="res_model">farm.equipment.checklist</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_farm_equipment_checklist" name="Safety Checklists" parent="menu_farm_machinery_root" action="action_farm_equipment_checklist" sequence="40"/>
</odoo>
