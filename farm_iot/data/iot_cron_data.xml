<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- US-TECH-03-02: Async buffer processing every minute -->
        <record id="ir_cron_iot_buffer_processor" model="ir.cron">
            <field name="name">IoT: Async Telemetry Buffer Processor</field>
            <field name="model_id" ref="model_iot_telemetry_buffer"/>
            <field name="state">code</field>
            <field name="code">model.cron_process_buffer()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
