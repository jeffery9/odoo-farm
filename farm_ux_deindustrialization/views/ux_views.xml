    <!-- 上下文帮助视图 -->
    <record id="view_contextual_help_tree" model="ir.ui.view">
        <field name="name">contextual.help.tree</field>
        <field name="model">contextual.help</field>
        <field name="arch" type="xml">
            <tree string="Contextual Help" decoration-danger="not is_active" decoration-success="is_active">
                <field name="name"/>
                <field name="model_name"/>
                <field name="field_name"/>
                <field name="view_type"/>
                <field name="priority"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_contextual_help_form" model="ir.ui.view">
        <field name="name">contextual.help.form</field>
        <field name="model">contextual.help</field>
        <field name="arch" type="xml">
            <form string="Contextual Help">
                <header>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Help Topic"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="model_name"/>
                            <field name="field_name"/>
                            <field name="view_type"/>
                        </group>
                        <group>
                            <field name="priority"/>
                            <field name="industry_context"/>
                            <field name="difficulty_level"/>
                        </group>
                    </group>
                    <group>
                        <field name="target_roles" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Help Content">
                            <field name="help_content" nolabel="1"/>
                        </page>
                        <page string="Media Resources">
                            <group>
                                <field name="help_video_url"/>
                                <field name="help_image" filename="image_name"/>
                                <field name="image_name" invisible="1"/>
                            </group>
                        </page>
                        <page string="Related FAQ">
                            <field name="related_faq_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- FAQ 条目视图 -->
    <record id="view_faq_entry_tree" model="ir.ui.view">
        <field name="name">faq.entry.tree</field>
        <field name="model">faq.entry</field>
        <field name="arch" type="xml">
            <tree string="FAQ Entries" decoration-danger="not is_active" decoration-success="is_active">
                <field name="question"/>
                <field name="category"/>
                <field name="view_count"/>
                <field name="helpful_count"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_faq_entry_form" model="ir.ui.view">
        <field name="name">faq.entry.form</field>
        <field name="model">faq.entry</field>
        <field name="arch" type="xml">
            <form string="FAQ Entry">
                <header>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="question" placeholder="Question"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="tags"/>
                        </group>
                        <group>
                            <field name="view_count"/>
                            <field name="helpful_count"/>
                            <field name="not_helpful_count"/>
                        </group>
                    </group>
                    <group string="Answer">
                        <field name="answer" nolabel="1"/>
                    </group>
                    <group string="Related Help Topics">
                        <field name="related_help_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 农业知识库视图 -->
    <record id="view_agricultural_knowledge_tree" model="ir.ui.view">
        <field name="name">agricultural.knowledge.tree</field>
        <field name="model">agricultural.knowledge</field>
        <field name="arch" type="xml">
            <tree string="Agricultural Knowledge" decoration-danger="not is_active" decoration-success="is_active">
                <field name="name"/>
                <field name="category"/>
                <field name="difficulty_level"/>
                <field name="industry_specific"/>
                <field name="publish_date"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_agricultural_knowledge_form" model="ir.ui.view">
        <field name="name">agricultural.knowledge.form</field>
        <field name="model">agricultural.knowledge</field>
        <field name="arch" type="xml">
            <form string="Agricultural Knowledge">
                <header>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Knowledge Title"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
