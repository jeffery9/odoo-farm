    <record id="view_farm_social_network_form" model="ir.ui.view">
        <field name="name">farm.social.network.form</field>
        <field name="model">farm.social.network</field>
        <field name="arch" type="xml">
            <form string="Farm Social Network">
                <header>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Network Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="network_type"/>
                            <field name="privacy_level"/>
                        </group>
                        <group>
                            <field name="created_by"/>
                            <field name="created_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Members">
                            <field name="member_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Administrators">
                            <field name="admin_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Message Board">
                            <field name="message_board" nolabel="1"/>
                        </page>
                        <page string="Shared Resources">
                            <field name="shared_resources" nolabel="1"/>
                        </page>
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 无障碍设置视图 -->
    <record id="view_accessibility_settings_tree" model="ir.ui.view">
        <field name="name">accessibility.settings.tree</field>
        <field name="model">accessibility.settings</field>
        <field name="arch" type="xml">
