<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 术语映射视图 -->
    <record id="view_term_mapping_tree" model="ir.ui.view">
        <field name="name">term.mapping.tree</field>
        <field name="model">term.mapping</field>
        <field name="arch" type="xml">
            <tree string="Term Mappings" decoration-danger="not is_active" decoration-success="is_active">
                <field name="name"/>
                <field name="source_term"/>
                <field name="target_term"/>
                <field name="language_code"/>
                <field name="industry_context"/>
                <field name="is_active"/>
                <field name="region_specific"/>
            </tree>
        </field>
    </record>

    <record id="view_term_mapping_form" model="ir.ui.view">
        <field name="name">term.mapping.form</field>
        <field name="model">term.mapping</field>
        <field name="arch" type="xml">
            <form string="Term Mapping">
                <header>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Mapping Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="source_term" placeholder="e.g. Manufacturing Order"/>
                            <field name="target_term" placeholder="e.g. Intervention"/>
                            <field name="language_code"/>
                        </group>
                        <group>
                            <field name="industry_context"/>
                            <field name="region_specific"/>
                            <field name="region_code" attrs="{'invisible': [('region_specific', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                        <page string="Usage">
                            <field name="example_usage" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 表单布局模板视图 -->
    <record id="view_form_layout_template_tree" model="ir.ui.view">
        <field name="name">form.layout.template.tree</field>
        <field name="model">form.layout.template</field>
        <field name="arch" type="xml">
            <tree string="Form Layout Templates" decoration-danger="not is_active" decoration-success="is_active">
                <field name="name"/>
                <field name="model_name"/>
                <field name="industry_type"/>
                <field name="user_role"/>
                <field name="version"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_form_layout_template_form" model="ir.ui.view">
        <field name="name">form.layout.template.form</field>
        <field name="model">form.layout.template</field>
        <field name="arch" type="xml">
            <form string="Form Layout Template">
                <header>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Template Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="model_name"/>
                            <field name="industry_type"/>
                            <field name="user_role"/>
                        </group>
                        <group>
                            <field name="version"/>
                            <field name="created_by"/>
                            <field name="created_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Layout Definition">
                            <field name="layout_definition" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 视觉状态标识视图 -->
    <record id="view_visual_status_indicator_tree" model="ir.ui.view">
        <field name="name">visual.status.indicator.tree</field>
        <field name="model">visual.status.indicator</field>
        <field name="arch" type="xml">
            <tree string="Visual Status Indicators" decoration-danger="not is_active" decoration-success="is_active">
                <field name="name"/>
                <field name="status_type"/>
                <field name="status_value"/>
                <field name="color_code"/>
                <field name="icon_class"/>
                <field name="badge_style"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_visual_status_indicator_form" model="ir.ui.view">
        <field name="name">visual.status.indicator.form</field>
        <field name="model">visual.status.indicator</field>
        <field name="arch" type="xml">
            <form string="Visual Status Indicator">
                <header>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Indicator Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="status_type"/>
                            <field name="status_value"/>
                        </group>
                        <group>
                            <field name="color_code"/>
                            <field name="icon_class"/>
                            <field name="badge_style"/>
                        </group>
                    </group>
                    <group string="Enhanced Feedback">
                        <field name="notification_sound"/>
                        <field name="vibration_pattern"/>
                        <field name="animation_effect"/>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 工作空间定制视图 -->
