<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FAQ 条目视图 -->
    <record id="view_faq_entry_tree" model="ir.ui.view">
        <field name="name">faq.entry.tree</field>
        <field name="model">faq.entry</field>
        <field name="arch" type="xml">
            <tree string="FAQ Entries" decoration-danger="not is_active" decoration-success="is_active">
                <field name="question"/>
                <field name="category"/>
                <field name="view_count"/>
                <field name="helpful_count"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_faq_entry_form" model="ir.ui.view">
        <field name="name">faq.entry.form</field>
        <field name="model">faq.entry</field>
        <field name="arch" type="xml">
            <form string="FAQ Entry">
                <header>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="question" placeholder="Question"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="tags"/>
                        </group>
                        <group>
                            <field name="view_count"/>
                            <field name="helpful_count"/>
                            <field name="not_helpful_count"/>
                        </group>
                    </group>
                    <group string="Answer">
                        <field name="answer" nolabel="1"/>
                    </group>
                    <group string="Related Help Topics">
                        <field name="related_help_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- FAQ 条目菜单和动作 -->
    <record id="action_faq_entries" model="ir.actions.act_window">
        <field name="name">FAQ Entries</field>
        <field name="res_model">faq.entry</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_faq_entries" 
              name="FAQ Entries" 
              parent="farm_ux_deindustrialization.menu_ux_root" 
              action="action_faq_entries" 
              sequence="55"/>
</odoo>