<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 农业知识库视图 -->
    <record id="view_agricultural_knowledge_tree" model="ir.ui.view">
        <field name="name">agricultural.knowledge.tree</field>
        <field name="model">agricultural.knowledge</field>
        <field name="arch" type="xml">
            <tree string="Agricultural Knowledge" decoration-danger="not is_active" decoration-success="is_active">
                <field name="name"/>
                <field name="category"/>
                <field name="difficulty_level"/>
                <field name="industry_specific"/>
                <field name="publish_date"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_agricultural_knowledge_form" model="ir.ui.view">
        <field name="name">agricultural.knowledge.form</field>
        <field name="model">agricultural.knowledge</field>
        <field name="arch" type="xml">
            <form string="Agricultural Knowledge">
                <header>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Knowledge Title"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="difficulty_level"/>
                            <field name="industry_specific"/>
                        </group>
                        <group>
                            <field name="author"/>
                            <field name="publish_date"/>
                            <field name="tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Content">
                            <field name="content" nolabel="1"/>
                        </page>
                        <page string="Media">
                            <field name="image_ids" widget="many2many_binary"/>
                            <field name="video_url"/>
                        </page>
                        <page string="Related Items">
                            <group>
                                <field name="related_products" widget="many2many_tags"/>
                                <field name="related_tasks" widget="many2many_tags"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 农业知识库菜单和动作 -->
    <record id="action_agricultural_knowledge" model="ir.actions.act_window">
        <field name="name">Agricultural Knowledge</field>
        <field name="res_model">agricultural.knowledge</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_agricultural_knowledge" 
              name="Agricultural Knowledge" 
              parent="farm_ux_deindustrialization.menu_ux_root" 
              action="action_agricultural_knowledge" 
              sequence="60"/>
</odoo>