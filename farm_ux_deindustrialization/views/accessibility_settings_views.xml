<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 无障碍设置视图 -->
    <record id="view_accessibility_settings_tree" model="ir.ui.view">
        <field name="name">accessibility.settings.tree</field>
        <field name="model">accessibility.settings</field>
        <field name="arch" type="xml">
            <tree string="Accessibility Settings">
                <field name="name"/>
                <field name="user_id"/>
                <field name="screen_reader_enabled"/>
                <field name="high_contrast_mode"/>
                <field name="font_scaling"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_accessibility_settings_form" model="ir.ui.view">
        <field name="name">accessibility.settings.form</field>
        <field name="model">accessibility.settings</field>
        <field name="arch" type="xml">
            <form string="Accessibility Settings">
                <header>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Setting Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="screen_reader_enabled"/>
                            <field name="keyboard_navigation"/>
                        </group>
                        <group>
                            <field name="high_contrast_mode"/>
                            <field name="large_touch_targets"/>
                            <field name="reduced_motion"/>
                        </group>
                    </group>
                    <group string="Visual Adjustments">
                        <field name="font_scaling"/>
                        <field name="color_blind_mode"/>
                        <field name="custom_color_scheme"/>
                    </group>
                    <group string="Audio & Voice">
                        <field name="voice_navigation"/>
                    </group>
                    <group string="Description">
                        <field name="last_updated"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 无障碍设置菜单和动作 -->
    <record id="action_accessibility_settings" model="ir.actions.act_window">
        <field name="name">Accessibility Settings</field>
        <field name="res_model">accessibility.settings</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_accessibility_settings" 
              name="Accessibility Settings" 
              parent="farm_ux_deindustrialization.menu_ux_root" 
              action="action_accessibility_settings" 
              sequence="90"/>
</odoo>