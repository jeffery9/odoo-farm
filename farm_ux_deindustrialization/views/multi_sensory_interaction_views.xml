<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 多感官交互视图 -->
    <record id="view_multi_sensory_interaction_tree" model="ir.ui.view">
        <field name="name">multi.sensory.interaction.tree</field>
        <field name="model">multi.sensory.interaction</field>
        <field name="arch" type="xml">
            <tree string="Multi-Sensory Interactions" decoration-danger="not is_enabled" decoration-success="is_enabled">
                <field name="name"/>
                <field name="interaction_type"/>
                <field name="model_name"/>
                <field name="is_enabled"/>
            </tree>
        </field>
    </record>

    <record id="view_multi_sensory_interaction_form" model="ir.ui.view">
        <field name="name">multi.sensory.interaction.form</field>
        <field name="model">multi.sensory.interaction</field>
        <field name="arch" type="xml">
            <form string="Multi-Sensory Interaction">
                <header>
                    <field name="is_enabled" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Feature Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="interaction_type"/>
                            <field name="model_name"/>
                            <field name="field_name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Voice & Audio">
                            <group>
                                <field name="voice_commands" widget="ace" options="{'mode': 'json'}"/>
                                <field name="audio_notification"/>
                            </group>
                        </page>
                        <page string="Visual & Touch">
                            <group>
                                <field name="visual_enhancement"/>
                                <field name="large_font_support"/>
                                <field name="high_contrast_mode"/>
                                <field name="large_touch_targets"/>
                            </group>
                        </page>
                        <page string="Gesture & Haptic">
                            <group>
                                <field name="gesture_mappings" widget="ace" options="{'mode': 'json'}"/>
                                <field name="haptic_feedback"/>
                            </group>
                        </page>
                        <page string="Accessibility">
                            <group>
                                <field name="screen_reader_compatible"/>
                                <field name="keyboard_shortcuts" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 多感官交互菜单和动作 -->
    <record id="action_multi_sensory" model="ir.actions.act_window">
        <field name="name">Multi-Sensory Interaction</field>
        <field name="res_model">multi.sensory.interaction</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_multi_sensory" 
              name="Multi-Sensory Interaction" 
              parent="farm_ux_deindustrialization.menu_ux_root" 
              action="action_multi_sensory" 
              sequence="70"/>
</odoo>