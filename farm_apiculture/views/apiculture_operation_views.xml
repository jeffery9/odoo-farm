<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Apiculture Operation Form View -->
    <record id="view_farm_apiculture_operation_form" model="ir.ui.view">
        <field name="name">farm.apiculture.operation.form</field>
        <field name="model">farm.apiculture.operation</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra_info']" position="after">
                <page string="Apiculture Information" name="apiculture_info">
                    <group name="hive_colony_info" string="Hive & Colony Management">
                        <group name="hive_details" string="Hive Information">
                            <field name="hive_id"/>
                            <field name="hive_location"/>
                        </group>
                        <group name="colony_status" string="Colony Status">
                            <field name="colony_strength"/>
                            <field name="colony_population"/>
                            <field name="queen_status"/>
                            <field name="queen_age_months"/>
                        </group>
                        <group name="bee_info" string="Bee Information">
                            <field name="bee_species"/>
                            <field name="bee_breed"/>
                        </group>
                    </group>
                    <group name="nectar_info" string="Nectar Source Management">
                        <group name="nectar_sources" string="Available Sources">
                            <field name="nectar_sources"/>
                            <field name="flowering_plants"/>
                            <field name="nectar_availability"/>
                        </group>
                    </group>
                    <group name="honey_info" string="Honey Production">
                        <group name="production_status" string="Production Status">
                            <field name="honey_production_stage"/>
                            <field name="honey_store_level"/>
                            <field name="honey_production_rate"/>
                        </group>
                        <group name="harvest_info" string="Harvest Information">
                            <field name="last_harvest_date"/>
                            <field name="last_harvest_yield"/>
                        </group>
                    </group>
                    <group name="movement_info" string="Hive Movement">
                        <field name="migration_schedule"/>
                        <field name="current_location"/>
                        <field name="previous_locations"/>
                        <field name="migration_reason"/>
                    </group>
                    <group name="health_info" string="Bee Health Management">
                        <field name="health_status"/>
                        <field name="health_notes"/>
                        <field name="pest_control_used"/>
                    </group>
                    <group name="reproduction_info" string="Breeding & Reproduction">
                        <field name="breeding_status"/>
                        <field name="swarm_date"/>
                        <field name="swarm_details"/>
                    </group>
                    <group name="seasonal_info" string="Seasonal Management">
                        <field name="season"/>
                        <field name="apiculture_stage"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Apiculture Operation Tree View -->
    <record id="view_farm_apiculture_operation_tree" model="ir.ui.view">
        <field name="name">farm.apiculture.operation.tree</field>
        <field name="model">farm.apiculture.operation</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="hive_id"/>
                <field name="colony_strength"/>
                <field name="queen_status"/>
                <field name="honey_store_level"/>
                <field name="health_status"/>
                <field name="apiculture_stage"/>
            </field>
        </field>
    </record>

    <!-- Hive Inspection Form View -->
    <record id="view_farm_hive_inspection_form" model="ir.ui.view">
        <field name="name">farm.hive.inspection.form</field>
        <field name="model">farm.hive.inspection</field>
        <field name="arch" type="xml">
            <form string="Hive Inspection">
                <sheet>
                    <group>
                        <group name="main_info">
                            <field name="operation_id"/>
                            <field name="inspection_date"/>
                            <field name="inspector"/>
                        </group>
                        <group name="colony_status">
                            <field name="colony_strength"/>
                            <field name="queen_status"/>
                            <field name="bee_population"/>
                            <field name="honey_store_level"/>
                        </group>
                    </group>
                    <group string="Health Assessment">
                        <field name="health_status"/>
                        <field name="issues_found"/>
                        <field name="recommendations"/>
                    </group>
                    <group string="Actions & Follow-up">
                        <field name="actions_taken"/>
                        <field name="next_inspection_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Hive Inspection Tree View -->
    <record id="view_farm_hive_inspection_tree" model="ir.ui.view">
        <field name="name">farm.hive.inspection.tree</field>
        <field name="model">farm.hive.inspection</field>
        <field name="arch" type="xml">
            <tree string="Hive Inspections">
                <field name="inspection_date"/>
                <field name="operation_id"/>
                <field name="colony_strength"/>
                <field name="health_status"/>
                <field name="bee_population"/>
            </tree>
        </field>
    </record>

    <!-- Action for Apiculture Operations -->
    <record id="action_farm_apiculture_operations" model="ir.actions.act_window">
        <field name="name">Apiculture Operations</field>
        <field name="res_model">farm.apiculture.operation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action for Hive Inspections -->
    <record id="action_farm_hive_inspections" model="ir.actions.act_window">
        <field name="name">Hive Inspections</field>
        <field name="res_model">farm.hive.inspection</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu items for Apiculture -->
    <menuitem id="menu_farm_apiculture_root"
              name="Apiculture"
              parent="farm_core.menu_farm_root"
              sequence="26"/>

    <menuitem id="menu_farm_apiculture_operations"
              name="Operations"
              parent="menu_farm_apiculture_root"
              action="action_farm_apiculture_operations"
              sequence="10"/>

    <menuitem id="menu_farm_hive_inspections"
              name="Hive Inspections"
              parent="menu_farm_apiculture_root"
              action="action_farm_hive_inspections"
              sequence="20"/>
</odoo>