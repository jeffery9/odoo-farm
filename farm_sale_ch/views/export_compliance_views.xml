<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 出口标准配置 -->
    <record id="view_export_country_standard_tree" model="ir.ui.view">
        <field name="name">export.country.standard.tree</field>
        <field name="model">export.country.standard</field>
        <field name="arch" type="xml">
            <tree string="Export Country Standards">
                <field name="name"/>
                <field name="code"/>
                <field name="prohibited_products"/>
            </tree>
        </field>
    </record>

    <record id="view_export_country_standard_form" model="ir.ui.view">
        <field name="name">export.country.standard.form</field>
        <field name="model">export.country.standard</field>
        <field name="arch" type="xml">
            <form string="Export Country Standard">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                    <group string="Prohibited Products/Pesticides">
                        <field name="prohibited_products" widget="many2many_tags"/>
                    </group>
                    <group string="Additional Compliance Requirements">
                        <field name="compliance_requirements" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 菜单项 -->
    <menuitem id="menu_export_compliance_root" 
              name="Export Compliance" 
              sequence="50"/>

    <menuitem id="menu_export_country_standards" 
              name="Country Standards" 
              parent="menu_export_compliance_root" 
              action="action_export_country_standards"/>

    <record id="action_export_country_standards" model="ir.actions.act_window">
        <field name="name">Country Standards</field>
        <field name="res_model">export.country.standard</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- 合规检查日志视图 -->
    <record id="view_export_compliance_log_tree" model="ir.ui.view">
        <field name="name">export.compliance.log.tree</field>
        <field name="model">export.compliance.log</field>
        <field name="arch" type="xml">
            <tree string="Compliance Check Logs">
                <field name="order_id"/>
                <field name="country_code"/>
                <field name="result"/>
                <field name="checked_on"/>
                <field name="checked_by"/>
                <field name="violations"/>
            </tree>
        </field>
    </record>

    <record id="view_export_compliance_log_form" model="ir.ui.view">
        <field name="name">export.compliance.log.form</field>
        <field name="model">export.compliance.log</field>
        <field name="arch" type="xml">
            <form string="Compliance Check Log">
                <sheet>
                    <group>
                        <group>
                            <field name="order_id"/>
                            <field name="country_code"/>
                            <field name="result"/>
                        </group>
                        <group>
                            <field name="checked_on"/>
                            <field name="checked_by"/>
                        </group>
                    </group>
                    <group string="Violations" attrs="{'invisible': [('result', '!=', 'failed')]}">
                        <field name="violations" nolabel="1"/>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 合规证书视图 -->
    <record id="view_export_certificate_tree" model="ir.ui.view">
        <field name="name">export.certificate.tree</field>
        <field name="model">export.certificate</field>
        <field name="arch" type="xml">
            <tree string="Export Certificates">
                <field name="certificate_number"/>
                <field name="order_id"/>
                <field name="product_name"/>
                <field name="destination_country"/>
                <field name="issue_date"/>
                <field name="valid_until"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_export_certificate_form" model="ir.ui.view">
        <field name="name">export.certificate.form</field>
        <field name="model">export.certificate</field>
        <field name="arch" type="xml">
            <form string="Export Certificate">
                <header>
                    <button name="action_generate_certificate_document" type="object" string="Generate Certificate Document" class="oe_highlight"/>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="certificate_number"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="order_id"/>
                            <field name="product_name"/>
                            <field name="destination_country"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="valid_until"/>
                            <field name="inspector"/>
                        </group>
                    </group>
                    <group string="Compliance Details">
                        <field name="compliance_details" nolabel="1"/>
                    </group>
                    <group string="Certificate Document" attrs="{'invisible': [('attachment', '=', False)]}">
                        <field name="attachment" filename="attachment_name"/>
                        <field name="attachment_name" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 扩展国家标准表单，添加更多字段 -->
    <record id="view_export_country_standard_form_extended" model="ir.ui.view">
        <field name="name">export.country.standard.form.extended</field>
        <field name="model">export.country.standard</field>
        <field name="inherit_id" ref="view_export_country_standard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[last()]" position="after">
                <group string="Management">
                    <field name="import_date"/>
                    <field name="imported_by"/>
                    <field name="last_updated"/>
                    <field name="update_frequency"/>
                    <field name="next_review_date"/>
                </group>
                <group string="Additional Information">
                    <field name="custom_rules" nolabel="1"/>
                    <field name="contact_person"/>
                    <field name="official_source"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- 菜单项 -->
    <menuitem id="menu_export_compliance_logs"
              name="Compliance Logs"
              parent="menu_export_compliance_root"
              action="action_export_compliance_logs"/>

    <menuitem id="menu_export_certificates"
              name="Certificates"
              parent="menu_export_compliance_root"
              action="action_export_certificates"/>

    <!-- 动作 -->
    <record id="action_export_compliance_logs" model="ir.actions.act_window">
        <field name="name">Compliance Check Logs</field>
        <field name="res_model">export.compliance.log</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_export_certificates" model="ir.actions.act_window">
        <field name="name">Export Certificates</field>
        <field name="res_model">export.certificate</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>